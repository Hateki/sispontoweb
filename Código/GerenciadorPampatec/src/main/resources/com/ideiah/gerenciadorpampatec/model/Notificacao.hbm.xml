<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class dynamic-insert="false" dynamic-update="false" mutable="true" name="com.ideiah.gerenciadorpampatec.model.Notificacao" optimistic-lock="version" polymorphism="implicit" select-before-update="false"/>

    <id name ="idNotificacao" type="int">
        <column name="idNegocio" />
        <generator class="identity" />
    </id>
  
    <property name="descricao" type="string">
        <column name="descricao" length="450" />
    </property>
    
    <set name="empreendedor" table="empreendedor" inverse="true" lazy="true" fetch="select" cascade="all">
        <key>
            <column name="empreendedor_idEmpreendedor" not-null="true" />
        </key>
        <one-to-many class="com.ideiah.gerenciadorpampatec.model.Empreendedor" />
    </set>

</hibernate-mapping>
